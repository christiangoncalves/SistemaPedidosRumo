@model SistemaPedidosRumo.Models.Cardapio

@{
    ViewData["Title"] = "Cardapio";
}

<h2>Inserir Produto no Cardápio</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocalCriacao" class="control-label">Local Criacao</label>
                <select asp-for="LocalCriacao" class="form-control">
                    <option value="">---Selecione---</option>
                    <option value="0">Cozinha</option>
                    <option value="1">Copa</option>
                </select>
                <span asp-validation-for="LocalCriacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Inserir" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
