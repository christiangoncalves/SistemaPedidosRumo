@model SistemaPedidosRumo.Models.PedidoAuxiliar

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PedidoAuxiliar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdPedido" class="control-label">Numero do Pedido</label>
                <input asp-for="IdPedido" value="@ViewBag.idPedido" class="form-control" disabled="disabled"/>
                <span asp-validation-for="IdPedido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCardapio" class="control-label">Cardápio</label>
                <select asp-items="@ViewBag.itensCardapio" class="form-control"></select>
                <span asp-validation-for="IdCardapio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Qtde" class="control-label">Quantidade</label>
                <input asp-for="Qtde" class="form-control" />
                <span asp-validation-for="Qtde" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
