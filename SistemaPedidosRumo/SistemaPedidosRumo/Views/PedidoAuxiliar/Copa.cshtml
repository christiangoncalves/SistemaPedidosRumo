@model IEnumerable<SistemaPedidosRumo.Models.PedidoAuxiliar>

@{
    ViewData["Title"] = "Copa";
}

<h2>Copa</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Numero do Pedido")
            </th>
            <th>
                @Html.DisplayName("Bebida")
            </th>
            <th>
                @Html.DisplayName("Quantidade")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    @if(item.cardapio.LocalCriacao == 1)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdPedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cardapio.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qtde)
            </td>
            <td>
                @Html.ActionLink("Deletar", "DeleteCopa", new {  id=item.Id  })
            </td>
        </tr>
    }
}
    </tbody>
</table>

<div>
    <a asp-action="Index">Voltar</a>
</div>
